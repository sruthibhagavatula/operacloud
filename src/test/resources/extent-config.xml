<?xml version="1.0" encoding="UTF-8"?>
<!--Simple modification in newly added files for pom framework
.
 -->
<extentreports>
  <configuration>
    <!-- report theme -->
    <!-- standard, dark -->
    <theme>standard</theme>
  
    <!-- document encoding -->
    <!-- defaults to UTF-8 -->
    <encoding>UTF-8</encoding>
    
    <!-- protocol for script and stylesheets -->
    <!-- defaults to https -->
    <protocol>https</protocol>
    
    <!-- title of the document -->
    <documentTitle>OracleOperaCloud Automation Results</documentTitle>
    
    <!-- report name - displayed at top-nav -->
    <reportName>OracleOperaCloud Automation Test Results </reportName>
    
    <!-- report headline - displayed at top-nav, after reportHeadline -->
    <reportHeadline>OracleOperaCloud Automation Test Results Report</reportHeadline>
    
    <!-- global date format override -->
    <!-- defaults to yyyy-MM-dd -->
     <dateFormat>dd-MM-yyyy</dateFormat>
    
    <!-- global time format override -->
    <!-- defaults to HH:mm:ss -->
    <timeFormat>HH:mm:ss</timeFormat>
    
    <!-- custom javascript -->
    <scripts>
      <![CDATA[
        $(document).ready(function() {
          
        });
      ]]>
    </scripts>
    
    <!-- custom styles -->
    <styles>
      <![CDATA[
        
      ]]>
    </styles>
  </configuration>
</extentreports>
